generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  STUDENT
  INSTRUCTOR
}

model User {
  id        String     @id @default(uuid())
  email     String     @unique
  password  String
  name      String
  role      Role
  createdAt DateTime   @default(now())
  courses   Course[]
  purchases Purchase[]
}

model Course {
  id           String     @id @default(uuid())
  title        String
  description  String?
  price        Int
  instructor   User       @relation(fields: [instructorId], references: [id])
  instructorId String
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  lessons      Lesson[]
  purchases    Purchase[]
}

model Lesson {
  id        String   @id @default(uuid())
  title     String
  content   String
  course    Course   @relation(fields: [courseId], references: [id])
  courseId  String
  createdAt DateTime @default(now())
}

model Purchase {
  id        String   @id @default(uuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  course    Course   @relation(fields: [courseId], references: [id])
  courseId  String
  createdAt DateTime @default(now())
}
